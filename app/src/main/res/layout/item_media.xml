<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.actorDetails.MovieInteractionListener" />

        <variable
            name="item"
            type="com.karrar.movieapp.domain.models.Media" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:layout_height="144dp"
            android:layout_marginHorizontal="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@color/card_background_color"
            android:onClick="@{ () -> listener.onClickMovie(item.movieID)}"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:posterImage="@{item.imageUrl}"
            app:shapeAppearanceOverlay="@style/CardCorners.Medium" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
