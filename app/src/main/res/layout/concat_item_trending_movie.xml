<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.karrar.movieapp.domain.enums.Type" />

        <variable
            name="adapterRecycler"
            type="com.karrar.movieapp.ui.home.adapters.MovieAdapter" />

        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:padding="@dimen/spacing_small">

        <TextView
            android:id="@+id/text_title"
            style="@style/SemiBold.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_trending"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_see_all"
            style="@style/Regular.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_too_small"
            android:onClick="@{() -> viewModel.seeAllMovie(Type.TrendingMovieType)}"
            android:text="@string/see_all"
            android:textColor="@color/brand_color"
            app:drawableEndCompat="@drawable/ic_arrow_right"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:adapter="@{adapterRecycler}"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:currentPosition="@={viewModel.trendingPosition}"
            app:items="@{viewModel.trending.toData()}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            tools:listitem="@layout/item_movie" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="recycler_movie,text_see_all,text_title"
            app:isSuccess="@{viewModel.trending}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>