<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.home.adapters.MovieInteractionListener" />

        <variable
            name="item"
            type="com.karrar.movieapp.domain.models.Media" />

        <variable
            name="type"
            type="com.karrar.movieapp.domain.enums.MovieType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/media_card_width"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/spacing_small"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->listener.onClickMovie(item.movieID)}"
            app:posterImage="@{item.imageUrl}"
            app:shapeAppearanceOverlay="@style/CardCorners.Medium" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
