<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.karrar.movieapp.domain.models.Movie" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.actorDetails.MovieInteractionListener" />
    </data>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="128dp"
        android:layout_height="176dp"
        android:layout_marginHorizontal="@dimen/spacing_small"
        android:onClick="@{ () -> listener.onClickMovie(item.id)}"
        app:mediaImage="@{item.imageUrl}"
        android:scaleType="centerCrop"
        android:background="@color/brand_color"
        app:shapeAppearanceOverlay="@style/CardCorners.Medium" />
</layout>
