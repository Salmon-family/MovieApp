    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.karrar.movieapp.ui.movieReviews.ReviewFragment"
        android:label="ReviewFragment"
        tools:layout="@layout/fragment_review">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/youtubePlayerFragment"
        android:name="com.karrar.movieapp.ui.youtubePlayer.YoutubePlayerFragment"
        android:label="YoutubePlayerFragment"
        tools:layout="@layout/fragment_youtube_player">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
    <dialog
        android:id="@+id/saveMovieDialog"
        android:name="com.karrar.movieapp.ui.movieDetails.saveMovie.SaveMovieDialog"
        android:label="SaveMovieDialog"
        tools:layout="@layout/dialog_save_movie">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/logoutDialog"
        android:name="com.karrar.movieapp.ui.logout.LogoutDialog"
        android:label="LogoutDialog"
        tools:layout="@layout/dialog_logout">
        <action
            android:id="@+id/action_logoutDialog_to_loginFragment"
            app:destination="@id/loginFragment" />
    </dialog>
    <fragment
        android:id="@+id/ratedMoviesFragment"
        android:name="com.karrar.movieapp.ui.ratedmovies.RatedMoviesFragment"
        android:label="RatedMoviesFragment"
        tools:layout="@layout/fragment_rated_movies"/>
    <fragment
        android:id="@+id/watchHistoryFragment"
        android:name="com.karrar.movieapp.ui.watchhistory.WatchHistoryFragment"
        android:label="WatchHistoryFragment"
        tools:layout="@layout/fragment_watch_history"/>
