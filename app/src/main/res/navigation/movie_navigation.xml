    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.karrar.movieapp.ui.movieReviews.ReviewFragment"
        android:label="ReviewFragment"
        tools:layout="@layout/fragment_review">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
    <dialog
        android:id="@+id/saveMovieDialog"
        android:name="com.karrar.movieapp.ui.movieDetails.saveMovie.SaveMovieDialog"
        android:label="SaveMovieDialog"
        tools:layout="@layout/dialog_save_movie">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </dialog>
    <activity
        android:id="@+id/youtubePlayerActivity"
        android:name="com.karrar.movieapp.ui.youtubePlayer.YoutubePlayerActivity"
        android:label="YoutubePlayerActivity">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </activity>

</navigation>